generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Users {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  phone     String
  password  String
  roleId    Int
  roles     Role[]   @relation("UserRoles")
}

model Role {
  id    Int        @id @default(autoincrement())
  name  RoleType   @default(USER) 
  users Users[]    @relation("UserRoles")
}

enum RoleType {
  ADMIN
  USER
}

model Device {
  id          Int @id@default(autoincrement())
  name_device String
  status      String
  events      Events[]
}
model Events {
  id          Int @id@default(autoincrement())
  event_type  EventType
  event_time  DateTime @default(now())
  gas_concentration Decimal
  device_id   Int 
  device      Device @relation(fields: [device_id], references: [id])
}


enum EventType {
    FUGA_DETECTADA         
    VENTILADOR_ENCENDIDO    
    VALVULA_CERRADA
    SISTEMA_REESTABLECIDO    
}